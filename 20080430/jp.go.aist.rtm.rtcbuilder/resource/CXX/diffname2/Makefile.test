CXXFLAGS = `rtm-config --cflags`
LDFLAGS  = `rtm-config --libs`
SHFLAGS  = -shared

IDLC     = `rtm-config --idlc`
IDLFLAGS = `rtm-config --idlflags` -I`rtm-config --prefix`/include/rtm/idl
WRAPPER  = rtm-skelwrapper
WRAPPER_FLAGS = --include-dir="" --skel-suffix=Skel --stub-suffix=Stub

SKEL_OBJ = MyService3Skel.o 
STUB_OBJ = MyService3Stub.o 
IMPL_OBJ = MyService3SVC_impl.o 
OBJS     = test.o $(SKEL_OBJ) $(IMPL_OBJ)

.SUFFIXES : .so

all: test.so testComp

.cpp.o:
	rm -f $@
	$(CXX) $(CXXFLAGS) -c -o $@ $<

.o.so:
	rm -f $@
	$(CXX) $(SHFLAGS) -o $@ $(OBJS) $(LDFLAGS)

testComp: testComp.o $(OBJS)
	$(CXX) -o $@ $(OBJS) testComp.o $(LDFLAGS) 


clean: clean_objs clean_skelstub
	rm -f *~

clean_objs:
	rm -f $(OBJS) testComp.o test.so testComp

clean_skelstub:
	rm -f *Skel.h *Skel.cpp
	rm -f *Stub.h *Stub.cpp

MyService3Skel.cpp : MyService3.idl
	$(IDLC) $(IDLFLAGS) MyService3.idl
	$(WRAPPER) $(WRAPPER_FLAGS) --idl-file=MyService3.idl
MyService3Skel.h : MyService3.idl
	$(IDLC) $(IDLFLAGS) MyService3.idl
	$(WRAPPER) $(WRAPPER_FLAGS) --idl-file=MyService3.idl
MyService3Stub.cpp : MyService3.idl
	$(IDLC) $(IDLFLAGS) MyService3.idl
	$(WRAPPER) $(WRAPPER_FLAGS) --idl-file=MyService3.idl
MyService3Stub.h : MyService3.idl
	$(IDLC) $(IDLFLAGS) MyService3.idl
	$(WRAPPER) $(WRAPPER_FLAGS) --idl-file=MyService3.idl



test.so: $(OBJS)
test.o: test.h 	MyService3Skel.h MyService3SVC_impl.h  	
testComp.o: testComp.cpp test.cpp test.h MyService3Skel.h MyService3SVC_impl.h 

MyService3SVC_impl.o: MyService3SVC_impl.cpp MyService3SVC_impl.h MyService3Skel.h MyService3Stub.h
MyService3Skel.o: MyService3Skel.cpp MyService3Skel.h MyService3Stub.h
MyService3Stub.o: MyService3Stub.cpp MyService3Stub.h



